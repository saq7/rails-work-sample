= render partial: 'postgresql/tables/header'
= render partial: 'postgresql/tables/nav'

- main_header
  - tabs do |t|
    = t.tab 'Tables', postgresql_database_schema_tables_path

- main
  .wide
    .box-table
      .table-head
        .table-row
          .table-cell name
          .table-cell schema
      - tables.each do |table|
        .table-row
          .table-cell
            = link_to table.name, postgresql_database_schema_table_columns_path(table_name: table.name) 
          .table-cell
            = table.schema.name
